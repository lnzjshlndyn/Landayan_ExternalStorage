<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.landayan.landayan_externalstorage.MainActivity">

    <TableLayout

        android:layout_margin="40dp"
        android:layout_width="500dp"
        android:layout_height="wrap_content">
    <TextView
        android:text="Data:"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="29dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignRight="@+id/btn_InternalCache"
        android:layout_alignEnd="@+id/btn_InternalCache"
        android:id="@+id/et_data" />

    <Button
        android:onClick="InternalCache"
        android:id="@+id/btn_InternalCache"
        android:text="internal cache"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/et_data"
        android:layout_centerHorizontal="true" />

    <Button
        android:onClick="ExternalCache"
        android:id="@+id/btn_ExternalCache"
        android:text="External Cache"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_InternalCache"
        android:layout_alignRight="@+id/btn_InternalCache"
        android:layout_alignEnd="@+id/btn_InternalCache" />

    <Button
        android:onClick="ExternalStorage"
        android:id="@+id/btn_ExternalStorage"
        android:text="External Storage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_ExternalCache"
        android:layout_centerHorizontal="true" />

    <Button
        android:onClick="ExtPublicStorage"
        android:id="@+id/btn_ExtPublicStorage"
        android:text="Ext Public Storage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_ExternalStorage"
        android:layout_centerHorizontal="true" />

    <Button
        android:onClick="Next"
        android:id="@+id/btn_next"
        android:text="Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_ExtPublicStorage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp" />

    </TableLayout>
</RelativeLayout>
