<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.landayan.landayan_externalstorage.SecondActivity">

    <TableLayout
        android:layout_margin="40dp"
        android:layout_width="500dp"
        android:layout_height="wrap_content">

    <TextView
        android:text="OUTPUT"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_display"
        android:layout_marginTop="32dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:onClick="getInternalCache"
        android:id="@+id/btn_InternalCache"
        android:text="internal cache"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/tv_display"
        android:layout_centerHorizontal="true" />

    <Button
        android:onClick="getExternalCache"
        android:id="@+id/btn_ExternalCache"
        android:text="External Cache"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_InternalCache"
        android:layout_alignRight="@+id/btn_InternalCache"
        android:layout_alignEnd="@+id/btn_InternalCache" />

    <Button
        android:onClick="getExternalStorage"
        android:id="@+id/btn_ExternalStorage"
        android:text="External Storage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_ExternalCache"
        android:layout_centerHorizontal="true" />

    <Button
        android:onClick="getExtPublicStorage"
        android:id="@+id/btn_ExtPublicStorage"
        android:text="Ext Public Storage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_ExternalStorage"
        android:layout_centerHorizontal="true" />

    <Button
        android:onClick="Back"
        android:id="@+id/btn_back"
        android:text="Back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_ExtPublicStorage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp" />
</TableLayout>
</RelativeLayout>
